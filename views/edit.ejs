<% include ./partials/header %>

<div class='ui main text container segment'>
  <div class='ui huge header'>Edit "<%= blog.title %>"</div>
  <form class='ui form' method='POST' action='/blogs/<%= blog.id %>?_method=PUT'>
    <div class='field'>
      <label>Title</label>
      <input type='text' placeholder='title' name='blog[title]' value='<%= blog.title %>'/>
    </div>
    <div class='field'>
      <label>Image</label>
      <input type='text' placeholder='image' name='blog[image]' value='<%= blog.image %>'/>
    </div>
    <div class='field'>
      <label>Body</label>
      <textarea name='blog[body]'><%= blog.body %></textarea>
    </div>
    <input class='ui basic button' type='submit' />
  </form>
</div>

<% include ./partials/footer %>
